<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <CheckBox
        android:id="@+id/cb_business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s上的分"
        app:layout_constraintTop_toTopOf="@id/cb_business"
        app:layout_constraintBottom_toBottomOf="@id/cb_business"
        app:layout_constraintLeft_toRightOf="@id/cb_business"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_16"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cb_business"
        android:layout_marginTop="@dimen/dp_10"
        ></android.support.v7.widget.RecyclerView>



</android.support.constraint.ConstraintLayout>
