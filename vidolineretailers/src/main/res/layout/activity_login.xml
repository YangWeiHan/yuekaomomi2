<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/homepagebackground"
    tools:context=".homepage.ui.activity.LoginActivity">
    <!--小手机-->
    <ImageView
        android:id="@+id/icon_phone"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_marginLeft="@dimen/dp_36"
        android:src="@mipmap/login_icon_phone"
        />
    <!--手机号-->

    <com.xw.repo.XEditText
        android:id="@+id/edit_phone"
        android:layout_width="@dimen/dp_240"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/icon_phone"
        android:layout_marginLeft="@dimen/dp_18"
        android:hint="请输入手机号"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@id/icon_phone"
        android:background="@null"
        android:textSize="@dimen/sp_18"
        android:numeric="integer"

        />
     <TextView
        android:id="@+id/lineone"
        android:layout_width="@dimen/dp_290"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/icon_phone"
        android:layout_marginTop="@dimen/dp_10"
        />
     <ImageView
         android:id="@+id/icon_lock"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@id/lineone"
        android:layout_marginTop="@dimen/dp_40"
        android:src="@mipmap/login_icon_lock"
         app:layout_constraintLeft_toLeftOf="parent"
         android:layout_marginLeft="@dimen/dp_36"
        />

    <com.xw.repo.XEditText
        android:id="@+id/edit_pass"
        android:layout_width="@dimen/dp_240"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/icon_lock"
        android:layout_marginLeft="@dimen/dp_18"
        android:hint="登录密码"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@id/icon_lock"
        android:background="@null"
        android:textSize="@dimen/sp_18"
        android:inputType="textPassword"

        />

    <TextView
        android:id="@+id/linetwo"
        android:layout_width="@dimen/dp_290"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/icon_lock"
        android:layout_marginTop="@dimen/dp_10"
        />
    <CheckBox
        android:id="@+id/cb_rememberpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/icon_lock"
        app:layout_constraintTop_toBottomOf="@id/linetwo"
        android:layout_marginTop="@dimen/dp_10"
        android:text="记住密码"
        android:textColor="#ffffff"
        android:buttonTint="@color/colorCheckBok"

        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/fast_zcz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/linetwo"
        android:textSize="@dimen/sp_14"
        android:textColor="#fff"
        android:text="快速注册"
        app:layout_constraintBottom_toBottomOf="@id/cb_rememberpass"
        app:layout_constraintTop_toTopOf="@id/cb_rememberpass"
        />
    <Button
        android:id="@+id/button_login"
        android:layout_width="@dimen/dp_290"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/login_button_shape"
        android:text="登录"
        android:textSize="@dimen/sp_18"
        android:textColor="#ff5f71"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_120"


        />




</android.support.constraint.ConstraintLayout>