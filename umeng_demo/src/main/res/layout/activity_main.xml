<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_icon"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_uid"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        android:text="asdfsdfsdf"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_name"
        app:layout_constraintRight_toRightOf="@id/iv_uid"
        app:layout_constraintTop_toBottomOf="@id/iv_uid"
        android:text="dfsfdf"
        android:layout_marginTop="12dp"
        />
    <Button
        android:id="@+id/btn_share_withoutboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="不带面板的分享"
        app:layout_constraintTop_toBottomOf="@id/iv_icon"
        />


    <Button
        android:id="@+id/btn_share_withboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带面板的分享"
        app:layout_constraintTop_toBottomOf="@id/btn_share_withoutboard"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第三方登录"
        app:layout_constraintTop_toBottomOf="@id/btn_share_withboard"
        />

</android.support.constraint.ConstraintLayout>